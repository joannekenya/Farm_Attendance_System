@{
    var userRole = (ViewBag.UserRole as string ?? "").Trim();
}

<aside class="left-sidebar" id="left-sidebar">
    <div id="sidebar" class="sidebar sidebar-with-footer">
        <!-- Application Brand -->
        <div class="app-brand">
            <a class="sidenav-item-link" asp-action="Dashboard" asp-controller="Home">
                <img src="~/images/AMTEC_LOGO233200512.jpg" alt="Digital" class="brand-logo img-fluid" style="height:30px; width:80px;">
                <span class="brand-name" style="color:#000; font-size:12px; font-weight:300; margin-left:10px;">ATTENDANCE SYSTEM</span>
            </a>
        </div>


        <!-- Sidebar Content -->
        <div class="sidebar-content" data-simplebar>
            <ul class="nav sidebar-inner" id="sidebar-menu">
                <!-- Dashboard -->
                <li class="nav-item">
                    <a class="sidenav-item-link" asp-action="Dashboard" asp-controller="Home">
                        <i class="mdi mdi-view-dashboard"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>

                @if (ViewBag.UserRole == "Administrator")
                {
                    <!-- Set Up -->
                    <li class="nav-item has-sub">
                        <a class="sidenav-item-link" data-bs-toggle="collapse" href="#adminSetUpMenu" role="button">
                            <i class="mdi mdi-settings"></i>
                            <span class="nav-text">Set Up</span>
                            <i class="mdi mdi-chevron-down menu-arrow"></i>
                        </a>
                        <ul class="collapse sub-menu" id="adminSetUpMenu">
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Create" asp-controller="Roles">
                                    <i class="mdi mdi-plus"></i>
                                    <span class="nav-text">Add User Group</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Create" asp-controller="Users">
                                    <i class="mdi mdi-plus"></i>
                                    <span class="nav-text">Add Users</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Farmers -->
                    <li class="nav-item has-sub">
                        <a class="sidenav-item-link" data-bs-toggle="collapse" href="#adminFarmersMenu" role="button">
                            <i class="mdi mdi-account-group"></i>
                            <span class="nav-text">Farmers</span>
                            <i class="mdi mdi-chevron-down menu-arrow"></i>
                        </a>
                        <ul class="collapse sub-menu" id="adminFarmersMenu">
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Create" asp-controller="farmers">
                                    <i class="mdi mdi-plus"></i>
                                    <span class="nav-text">Add Farmers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index" asp-controller="farmers">
                                    <i class="mdi mdi-account-edit"></i>
                                    <span class="nav-text">Audit Farmers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index1" asp-controller="farmers">
                                    <i class="mdi mdi-format-list-bulleted"></i>
                                    <span class="nav-text">NO OF M/F</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Manage Users -->
                    <li class="nav-item has-sub">
                        <a class="sidenav-item-link" data-bs-toggle="collapse" href="#adminUsersMenu" role="button">
                            <i class="mdi mdi-account-group"></i>
                            <span class="nav-text">Manage Users</span>
                            <i class="mdi mdi-chevron-down menu-arrow"></i>
                        </a>
                        <ul class="collapse sub-menu" id="adminUsersMenu">
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index" asp-controller="Users">
                                    <i class="mdi mdi-account-settings"></i>
                                    <span class="nav-text">Manage Users</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index1" asp-controller="Users">
                                    <i class="mdi mdi-account-eye"></i>
                                    <span class="nav-text">View Users</span>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Reports -->
                    <li class="nav-item has-sub">
                        <a class="sidenav-item-link" data-bs-toggle="collapse" href="#adminReportsMenu" role="button">
                            <i class="mdi mdi-file-chart"></i>
                            <span class="nav-text">Reports</span>
                            <i class="mdi mdi-chevron-down menu-arrow"></i>
                        </a>
                        <ul class="collapse sub-menu" id="adminReportsMenu">
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index2" asp-controller="farmers">
                                    <i class="mdi mdi-chart-bar"></i>
                                    <span class="nav-text">View Reports</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @if (ViewBag.UserRole == "Supervisor")
                {
                    <!-- Supervisor View -->
                    <li class="nav-item has-sub">
                        <a class="sidenav-item-link" data-bs-toggle="collapse" href="#supervisorFarmersMenu" role="button">
                            <i class="mdi mdi-account-group"></i>
                            <span class="nav-text">Farmers</span>
                            <i class="mdi mdi-chevron-down menu-arrow"></i>
                        </a>
                        <ul class="collapse sub-menu" id="supervisorFarmersMenu">
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index" asp-controller="farmers">
                                    <i class="mdi mdi-account-edit"></i>
                                    <span class="nav-text">Manage Farmers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index1" asp-controller="farmers">
                                    <i class="mdi mdi-format-list-bulleted"></i>
                                    <span class="nav-text">List of Farmers</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @if (ViewBag.UserRole == "User")
                {
                    <!-- Regular User View -->
                    <li class="nav-item has-sub">
                        <a class="sidenav-item-link" data-bs-toggle="collapse" href="#userFarmersMenu" role="button">
                            <i class="mdi mdi-account-group"></i>
                            <span class="nav-text">Farmers</span>
                            <i class="mdi mdi-chevron-down menu-arrow"></i>
                        </a>
                        <ul class="collapse sub-menu" id="userFarmersMenu">
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Create" asp-controller="farmers">
                                    <i class="mdi mdi-plus"></i>
                                    <span class="nav-text">Add New Farmer</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index" asp-controller="farmers">
                                    <i class="mdi mdi-account-edit"></i>
                                    <span class="nav-text">Managed Farmers</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="sidenav-item-link" asp-action="Index1" asp-controller="farmers">
                                    <i class="mdi mdi-format-list-bulleted"></i>
                                    <span class="nav-text">List of Farmers</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

            </ul>
        </div>
    </div>
</aside>

<!-- Required CSS and JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.materialdesignicons.com/6.5.95/css/materialdesignicons.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
