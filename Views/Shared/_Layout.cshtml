@using System.Net.Http
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Farmers Attendance System - Manage and track farmers' attendance effectively.">
    <title>@ViewData["Title"] - Farmers Attendance System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/AMTEC_LOGO233200512.jpg" asp-append-version="true" />

    <!-- Preload critical resources -->
    <link rel="preload" href="https://code.jquery.com/jquery-3.6.0.min.js" as="script" crossorigin>
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" as="style">
    <link rel="preload" href="~/css/style.css" as="style" asp-append-version="true">
    <!-- Add in the <head> section or just above the closing </body> -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;700&family=Roboto&display=swap" rel="stylesheet" crossorigin>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="~/plugins/material/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/plugins/simplebar/simplebar.css" rel="stylesheet" />
    <link href="~/Printer/print.min.css" rel="stylesheet" media="print" />
    <link href="~/Syncfussion/styles/material.css" rel="stylesheet" />
    <link href="~/css/Defaults.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @RenderSection("Styles", required: false)
    <style>
        .table-green-header {
            background-color: #4CAF50;
            color: white;
        }

    </style>
</head>

<body class="navbar-fixed sidebar-fixed" id="body">
    <div class="pagewrapper">
        <!-- Header -->
        <header class="main-header" id="header">
            <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
                <button id="sidebar-toggler" class="sidebar-toggle" aria-label="Toggle sidebar" aria-expanded="false">
                    <span class="mdi mdi-menu"></span>
                </button>

                <div class="collapse navbar-collapse d-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown user-menu">
                            @{
                                var UserName = HttpContextAccessor.HttpContext?.Session?.GetString("UserName") ?? "Guest";
                            }
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/User1.png" class="user-image rounded-circle" alt="User Image" width="20" height="20" loading="lazy" />
                                <span class="d-none d-lg-inline-block">@UserName</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-action="Index" asp-controller="Users">
                                    <i class="mdi mdi-account-outline"></i> My Profile
                                </a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Users">
                                    <i class="mdi mdi-settings"></i> Account Setting
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Logoff" asp-controller="Home">
                                    <i class="mdi mdi-logout"></i> Log Out
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- Sidebar -->
        <div class="sidebar" id="left-sidebar">
            <partial name="_Sidebar" />
        </div>
        <div class="body-overlay"></div>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript -->
    <!-- Load jQuery first -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- Then load Bootstrap JS bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Other JS libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.js" defer></script>
    <script src="~/plugins/DataTables/DataTables-1.10.18/js/jquery.dataTables.min.js" defer></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true" defer></script>
    <script src="~/plugins/simplebar/simplebar.min.js" asp-append-version="true" defer></script>
    <script src="~/plugins/apexcharts/apexcharts.js" asp-append-version="true" defer></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-2.0.3.min.js" asp-append-version="true" defer></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-world-mill.js" asp-append-version="true" defer></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-us-aea.js" asp-append-version="true" defer></script>
    <script src="~/plugins/daterangepicker/moment.min.js" asp-append-version="true" defer></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js" asp-append-version="true" defer></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js" defer></script>
    <script src="~/plugins/toaster/toastr.min.js" asp-append-version="true" defer></script>
    <script src="~/Syncfussion/scripts/ej2.min.js" asp-append-version="true" defer></script>
    <script src="~/Printer/print.min.js" asp-append-version="true" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hotkeys-js/3.8.7/hotkeys.min.js" defer></script>

    <!-- Custom Scripts -->
    <script src="~/js/JavaScript.js" asp-append-version="true" defer></script>
    <script src="~/js/mono.js" asp-append-version="true" defer></script>
    <script src="~/js/chart.js" asp-append-version="true" defer></script>
    <script src="~/js/map.js" asp-append-version="true" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="~/js/custom.js" asp-append-version="true" defer></script>

    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebarToggler = document.getElementById('sidebar-toggler');
            const sidebar = document.getElementById('left-sidebar');
            const bodyOverlay = document.querySelector('.body-overlay');

            sidebarToggler?.addEventListener('click', function () {
                sidebar.classList.toggle('sidebar-visible');
                bodyOverlay?.classList.toggle('show');
            });

            bodyOverlay?.addEventListener('click', function () {
                sidebar.classList.remove('sidebar-visible');
                bodyOverlay.classList.remove('show');
            });
        });
    </script>
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (!input || !icon) return;

            const isPassword = input.type === "password";
            input.type = isPassword ? "text" : "password";

            icon.classList.toggle("bi-eye");
            icon.classList.toggle("bi-eye-slash");
        }

        function validatePasswords(passwordId, confirmId, messageId) {
            const password = document.getElementById(passwordId)?.value || '';
            const confirm = document.getElementById(confirmId)?.value || '';
            const message = document.getElementById(messageId);

            if (!message) return;

            if (confirm.length > 0 && password !== confirm) {
                message.textContent = "Passwords do not match";
                message.classList.add("text-danger");
            } else {
                message.textContent = "";
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</body>
</html>