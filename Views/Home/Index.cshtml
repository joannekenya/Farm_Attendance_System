@{
    Layout = "~/Views/Shared/_LoginPage.cshtml";
}
<style>
    body {
        background: url('@Url.Content("~/images/farmersattendace.jpg")') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh; /* Center vertically */
    }

    .login-box {
        width: 100%;
        max-width: 400px; /* Set max width */
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .castomtextbox, .castombuttonnn {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        font-weight: bold;
        border-radius: 5px;
    }

    .castomtextbox {
        background-color: #009100;
        color: white;
        border: none;
        cursor: pointer;
    }

    .castombuttonnn {
        border: solid 2px #f2bb25;
        background-color: white;
        color: black;
    }

    .castomtextbox:hover {
        background-color: darkgreen;
    }

    input[type="text"], input[type="password"] {
        border: 2px solid orange;
        padding: 10px;
    }

    .castomtextbox {
        padding: 3px;
        font-weight: bold;
        color: white;
        width: 50%;
        margin-top: 3px;
        background-color: #009100;
        border: none;
        border-radius: 3px;
    }

    .castombuttonnn {
        padding: 3px;
        color: black;
        font-weight: bold;
        width: 50%;
        margin-top: 3px;
        background-color: white;
        border: solid 2px #f2bb25;
        border-radius: 3px;
    }

    input::-webkit-input-placeholder {
        color: black;
    }
   .password-wrapper {
    position: relative;
    display: inline-block;
}

.password-wrapper input {
    padding-right: 40px;
    border: 2px solid black;
    border-radius: 8px;
    font-size: 16px;
    height: 40px;
}

.password-wrapper i {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    cursor: pointer;
    color: #555;
    font-size: 18px;
}

.login-box {
    display: flex; /* Add flex layout */
    width: 90%; /* Wider form */
    max-width: 800px; /* Previously 400px */
    padding: 0;
    background: white;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    text-align: left; /* Change to left align */
    overflow: hidden;
}

</style>
<div class="login-box">
    <!-- Left Side Content -->
    <div class="form-info p-4" style="background-color: #009100; color: white; width: 50%; text-align: center;">
        <img src="@Url.Content("~/images/digitalgreen.jpg")" alt="Logo" style="max-height: 80px; margin-bottom: 20px;" />
        <h3>Welcome to Digital Green</h3>
        <p>Track attendance easily, manage records efficiently, and empower farmers.
            Buoyed by this success, Annred expanded her agricultural endeavors. Initially focusing solely on millet, she diversified her crops to include maize, beans, bananas, sunflowers, and even ventured into poultry farming. Each step of the way, Farmer.Chat provided her with tailored advice that maximized her yields and minimized costs. The digital tool helped her understand the best planting practices and optimal harvest times, significantly boosting her farm’s productivity.

            “The financial barriers that once seemed insurmountable are now a thing of the past. School fees are no longer a problem, and now, I even support my parents,” Annred shares with pride. This financial stability is a direct result of her embracing technological solutions in her farming practice, which have not only increased her yields but also enhanced the quality of life for her family.
        </p>
        
    </div>


    <!-- Right Side Login -->
    <div class="form-body p-4" style="width: 50%;">
        <div style="text-align:center;">
            <img src="@Url.Content("~/images/AMTEC_LOGO233200512.jpg")" style="max-height:80px;" class="img-fluid" />
        </div>
        <h2 style="color:#fda901;">Farmers Attendance System</h2>

        @if (TempData["Success"] != null)
        {
            <div class="text-success p-2"><strong>Success!!..</strong> @TempData["Success"]</div>
        }

        @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post, new { @id = "loginForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="password-wrapper mb-2">
                <input type="text" name="UserName" class="castombuttonnn" placeholder="Username" required />
            </div>
            <div class="password-wrapper mb-3">
                <input type="password" name="password" id="passwordInput" placeholder="Password" required />
                <i class="bi bi-eye-slash" id="toggleIcon" onclick="togglePassword()"></i>
            </div>
            <input type="submit" class="castomtextbox" value="Login" />
        }

        <div class="d-flex justify-content-between mt-3">
            <div>
                <input type="checkbox" id="rememberMe">
                <label for="rememberMe">Remember Me</label>
            </div>
            <a asp-action="Index1" asp-controller="Users">Forgot Password?</a>
        </div>

        <div class="mt-3">
            <span>Don't have an account?</span>
            <a asp-action="Create" asp-controller="Users" class="text-decoration-none" style="color:#fda901;">Sign Up</a>
        </div>

        @if (TempData["Err"] != null)
        {
            <div class="text-danger p-2"><strong>Oops!!..</strong> @TempData["Err"]</div>
        }
    </div>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById("passwordInput");
        const icon = document.getElementById("toggleIcon");

        const isPassword = input.type === "password";
        input.type = isPassword ? "text" : "password";

        icon.classList.toggle("bi-eye");
        icon.classList.toggle("bi-eye-slash");
    }
</script>


